    "fast-xml-parser": "^4.5.3",
    "fastq": "1.17.1",
    "markdown-it": "^14.1.0",
    "performant-array-to-tree": "^1.11.0",
    "toml": "^3.0.0",
    "transliteration": "^2.3.5",
